<h1>Review</h1>
<div class='jumbotron'>
<%= form_for @review, :html => {class: 'edit_review_comment form-horizontal'} do |f| %>
<div class="row"><legend class="col-md-4 col-md-offset-4">Edit Comment:</legend></div>
<fieldset>
<div class="form-group">
        <%= f.text_field :title, class: 'form-control'%>
        <%= f.number_field :rating, class: 'form-control'%>
        <%= f.text_area :body, class: 'form-control' %><br />
        <%= f.submit 'Submit', class: 'btn btn-success' %>
    </div>
</fieldset>
<% end %>
</div>

