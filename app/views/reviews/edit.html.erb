<h1>Reviews#edit</h1>
<p>Find me in app/views/reviews/edit.html.erb</p>
<%= form_for @review, :html => {class: 'edit_review_comment form-horizontal'} do |f| %>
<div class="row"><legend class="col-md-4 col-md-offset-4">Edit Comment:</legend></div>
<fieldset>
<div class="form-group">
        <%= f.text_field :title, class: 'form-control'%>
        <%= f.number_field :rating, class: 'form-control'%>
        <%= f.text_field :body, class: 'form-control' %>
        <%= f.submit %>
    </div>
</fieldset>
<% end %>