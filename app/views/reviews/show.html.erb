<div class='jumbotron'>
<h2><%= @review.title %></h1>
<p><%= @review.body %></p>
<p><%= @review.rating %> stars </p>
<p>Review by: <%= @review.user.name %></p>

<%= link_to "Add Comment", new_review_comment_path(@review), class: 'btn btn-success' %>
<%= link_to "Edit", edit_review_path(@review), class: 'btn btn-warning' %>
<%= link_to "Delete", review_path(@review), method: :delete, class: 'btn btn-danger' %>
<ul>
   
    <% @review.comments.each do |c| %>
        <li>
            <p><%= c.body %> <br/>
            by: <%= c.user.name %>
            </p>
            <%= link_to 'Edit', edit_review_comment_path(@review, c.id), class: 'btn btn-primary' %>
            <%= link_to 'Delete', review_comment_path(@review, c.id), method: :delete, class: 'btn btn-danger' %>
        </li>

    <% end %>
</ul>
</div>
