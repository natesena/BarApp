
<div class="row">
<div class="col-md-6">
<div class="jumbotron">
        <h1 class="display-3">Welcome <%= @user.name %>!</h1>
        <p class="lead">
        <hr class="my-4">
        <h2>Explore BarHop</h2>
        <p class="lead">
        <h3><%= link_to 'Check out some bars in your area!', bars_path %></h3> 
        </p>
      </div>
</div>
<div class="col-md-6">
<h1>Your Favorites</h1>
<ul>
    <% @user.favorites.each do |f| %>
        <li>
            <h2><%= link_to f.bar.name, bar_path(f.bar.id) %></h2>
           <%= link_to 'Delete', "/favorites/#{f.id}",  method: :delete, class: 'btn btn-danger' %>
        </li>
    <% end %>
</ul>
</div>
</div>


